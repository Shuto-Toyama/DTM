<div class="main">
  <div class="card devise-card">
    <div class="form-wrap">
      <div class="form-group text-center">
        <h2 class="mx-auto">DTM connect OKINAWA</h2>
      </div>
      <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true do |f| %>
        <%if @sns_id.present? %>
          <div class="form-group">
            <%= hidden_field_tag :sns_auth, true %>
          </div>
          <div class="form-group">
            <%= hidden_field_tag :email, true %>
            <%= f.hidden_field :email %>
          </div>
          <div class="form-group">
            <%= hidden_field_tag :name, true %>
            <%= f.hidden_field :name %>
          </div>
          <div class="form-group">
            <%= f.label :username, "あなたの名前" %>
            <%= f.text_field :username, autofocus: true, class: "form-control" %>
          </div>
          <div class="actions">
            <%= f.submit "Facebookアカウントからログイン", class: "btn btn-primary w-100" %>
          </div>
        <% else %>
          <div class="form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :name, "あなたの名前" %>
            <%= f.text_field :name, autofocus: true, placeholder: "フルネーム", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :username, "ニックネーム" %>
            <%= f.text_field :username, autofocus: true, placeholder: "ニックネーム", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password, "パスワードの設定" %>
            <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, "パスワードの確認" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードの確認", class: "form-control" %>
          </div>
          <div class="actions">
            <%= f.submit "新規登録する", class: "btn btn-info w-100" %>
          </div>
        <% end %>
      <% end %>
      <br>
      <p class="devise-link">
        アカウントをお持ちですか？
        <%= link_to "ログインする", new_user_session_path %>
      </p>
    </div>
  </div>
</div>
