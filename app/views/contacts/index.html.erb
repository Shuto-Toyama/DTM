<div class = contact-container >
  <h1>お問い合わせフォーム<%= " 《確認》" if @contact.submitted == "1" %></h1>
  <%= form_with model: @contact, local: true do |form| %>
    <%= render "error_messages", form: form %>
    <%= form.hidden_field :submitted %>
    <% if @contact.submitted == "1" %>
      <%= render "confirm_fields", form: form %>
      <%= form.button "送信", name: "contact[confirmed]", value: "1", class: "btn btn-info"%>
      <%= form.button "戻る", name: "contact[confirmed]", value: "" , class: "btn btn-secondary aligh-items-right"%>
    <% else %>
      <%= render "submit_fields", form: form %>
      <%= form.submit "送信", class: "btn btn-info btn-block"%>
    <% end %>
  <% end %>
</div>
