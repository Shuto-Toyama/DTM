<div class="texts-wrapper">
  <h1 class="text-center mb-4">作品一覧</h1>
  <% if @movies.present?%>
    <div class="row">
      <% @movies.each do |movie| %>
        <div class="col-12 col-md-6 col-lg-4 movie-card-container">
          <div class="card content-card border-dark mb-3">
            <%= link_to user_path(movie.user_id) do%>
              <div class="embed-responsive embed-responsive-16by9">
                <%= embed_youtube(movie.url) %>
              </div>
              <div class="card-body">
                <p class="card-title">produced by <%= movie.user.username %></p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <h2 class="text-center mb-10">データを更新しています。。切り替わらなければ更新ボタンを押してください！！</h2>
  <% end %>
</div>
